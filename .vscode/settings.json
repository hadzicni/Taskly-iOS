{
    "editor.formatOnSave": true,
    "files.associations": {
      "*.swift": "swift"
    },
    "[swift]": {
      "editor.formatOnSave": true
    },
    "swift.formatPath": "/opt/homebrew/bin/swiftformat",
    "emeraldwalk.runonsave": {
      "commands": [
        {
          "match": "\\.swift$",
          "cmd": "swiftformat ${file}"
        }
      ]
    }
  }
  